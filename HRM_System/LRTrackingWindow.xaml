<Window x:Class="HRM_System.LRTrackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM_System"
        mc:Ignorable="d"
        Title="Leave Request Tracking" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
            <Button Content="Back" Click="Back_Click" Margin="5,0,0,0" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="Choose Employee:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="employeeComboBox" Width="150"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="EmployeeId"
                      SelectionChanged="EmployeeComboBox_SelectionChanged"/>

            <TextBlock Text="Choose Year:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="yearComboBox" Width="80" SelectionChanged="YearComboBox_SelectionChanged"/>
        </StackPanel>

        <DataGrid x:Name="reportDataGrid" Grid.Row="1" Margin="0,10,0,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="120"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="On Leave Days Left" Binding="{Binding OnLeaveLeft}" Width="150"/>
                <DataGridTextColumn Header="Sick Leave Days Left" Binding="{Binding SickLeaveLeft}" Width="150"/>
                <DataGridTextColumn Header="Leave Without Pay Days Left" Binding="{Binding LeaveWithoutPayLeft}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
