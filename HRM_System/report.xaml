<Window x:Class="HRM_System.report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM_System"
        mc:Ignorable="d"
        Title="report" Height="450" Width="800">
    <Grid Margin="120,0,0,-6">
        <StackPanel Margin="10">
            <TextBlock Text="Thống kê số lượng nhân viên" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Thống kê theo Phòng Ban" FontWeight="Bold" Margin="0,5,0,5"/>
            <DataGrid x:Name="DepartmentStatsGrid" AutoGenerateColumns="True" Height="100" Margin="0,0,0,10"/>

            <TextBlock Text="Thống kê theo Chức Vụ" FontWeight="Bold" Margin="0,5,0,5"/>
            <DataGrid x:Name="PositionStatsGrid" AutoGenerateColumns="True" Height="100" Margin="0,0,0,10"/>

            <TextBlock Text="Thống kê theo Giới Tính" FontWeight="Bold" Margin="0,5,0,5"/>
            <DataGrid x:Name="GenderStatsGrid" AutoGenerateColumns="True" Height="87"/>

        </StackPanel>
        <Button Content="Xuất ra excel" HorizontalAlignment="Left" Margin="-109,29,0,0" VerticalAlignment="Top" Height="43" Width="85" Click="Button_Click"/>
    </Grid>




</Window>
