<Window x:Class="HRM_System.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM_System"
        mc:Ignorable="d"
        Title="UserMainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- Nút điều hướng -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" Text="Bạn đang ở khu vực dành cho người dùng" 
               FontSize="20" FontWeight="Bold" Foreground="Red"
               HorizontalAlignment="Center" Margin="10"/>

        <!-- Khu vực nút điều hướng -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Nút 1" Width="200" Height="40" Margin="5" Click="Button1_Click"/>
            <Button Content="Nút 2" Width="200" Height="40" Margin="5" Click="Button2_Click"/>
            <Button Content="Nút 3" Width="200" Height="40" Margin="5" Click="Button3_Click"/>
            <Button Content="Đăng xuất" Width="200" Height="40" Margin="5" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
