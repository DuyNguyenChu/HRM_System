<Window x:Class="HRM_System.ActivityLogManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM_System"
        mc:Ignorable="d"
        Title="ActivityLogManageWindow" Height="450" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search & Header -->
            <RowDefinition Height="*"/>
            <!-- Attendance List -->
            <RowDefinition Height="Auto"/>
            <!-- Add/Update Section -->
        </Grid.RowDefinitions>
        <!-- TEST/ Có thể xóa -->
        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
            <Button Content="Timekeeping" Click="test_Click" Margin="5,0,0,0"/>
        </StackPanel>
        <!-- TEST/ Có thể xóa -->
        <DataGrid x:Name="activityLogDataGrid" Grid.Row="1" Margin="0,10,0,10" 
  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ActivityLog ID" Binding="{Binding ActivityLogId}" Width="100"/>
                <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="60"/>
                <DataGridTextColumn Header="Role" Binding="{Binding User.Role}" Width="80"/>
                <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="80"/>
                <DataGridTextColumn Header="Table Name" Binding="{Binding TableName}" Width="110"/>
                <DataGridTextColumn Header="Table Primary Key" Binding="{Binding TablePrimaryKey}" Width="110"/>
                <DataGridTextColumn Header="Record ID" Binding="{Binding RecordId}" Width="110"/>
                <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="150"/>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
